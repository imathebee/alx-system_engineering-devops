#!/usr/bin/env bash
# This script displays "Best School" 10 times, but for the 4th iteration, displays "bad luck" and then "good luck" for the 8th loop iteration.

# Initialize a counter variable
i=1

# Use while loop to print "Best School" 10 times
while ((i <= 10))
do
    # Check if it's the 4th iteration
    if ((i == 4))
    then
        echo "bad luck"
    elif ((i == 8))
    then
        echo "good luck"
    else
        echo "Best School"
    fi

    # Increment the counter
    ((i++))
done
